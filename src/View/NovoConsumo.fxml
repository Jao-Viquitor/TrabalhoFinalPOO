                              <Insets left="10.0" />
                           </HBox.margin>
                        </Label>
                     </children></HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="pesquisarProduto" prefHeight="37.0" prefWidth="145.0" promptText="CÃ³digo do Produto">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </TextField>
                                <Button mnemonicParsing="false" onAction="#pesquisarProduto" prefHeight="35.0" prefWidth="99.0" text="Pesquisar" />
                            </children>
                        </HBox>
                        <TextField fx:id="nomeProduto" editable="false" prefHeight="40.0" prefWidth="270.0" promptText="Nome do Produto">
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="5.0" />
                            </VBox.margin>
                        </TextField>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                              <TextField fx:id="valor" prefHeight="37.0" prefWidth="134.0" promptText="R$">
                           <HBox.margin>
                              <Insets left="25.0" />
                           </HBox.margin>
                              </TextField>
                         <Spinner fx:id="quantidade" prefHeight="37.0" prefWidth="100.0">
                           <HBox.margin>
                              <Insets left="15.0" />
                           </HBox.margin>
                         </Spinner>
                     </children>
                  </HBox>
                    </children>
                </VBox>
            <Button fx:id="confirmarSair" mnemonicParsing="false" onAction="#confirmarSair" text="Adicionar Mais" />
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="cancelar" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" textFill="RED">
                            <HBox.margin>
                                <Insets right="25.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="confirmar" mnemonicParsing="false" onAction="#confirmar" text="Confirmar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
