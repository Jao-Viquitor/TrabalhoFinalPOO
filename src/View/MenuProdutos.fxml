<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="800.0" styleClass="background" stylesheets="@Estilo/DarkTheme.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ProdutoController">
    <children>
        <VBox prefHeight="600.0" prefWidth="800.0">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" stylesheets="@Estilo/DarkTheme.css">
                    <children>
                  <Button fx:id="voltar" mnemonicParsing="false" onAction="#voltar" text="Voltar">
                     <HBox.margin>
                        <Insets left="25.0" />
                     </HBox.margin></Button>
                        <TextField prefHeight="25" prefWidth="250" promptText="Digite o código do Produto">
                            <HBox.margin>
                                <Insets left="100.0" right="25.0" />
                            </HBox.margin>
                            <font>
                                <Font name="Courier New" size="12.0" />
                            </font>
                        </TextField>
                        <Button fx:id="cadastrar" mnemonicParsing="false" onAction="#cadastrar" prefHeight="25" prefWidth="125.0" text="Cadastrar" />
                    </children>
                </HBox>
                <TableView fx:id="tableProduto" fixedCellSize="0.0">
                    <columns>
                        <TableColumn fx:id="table_id" prefWidth="150.0" text="ID" />
                        <TableColumn fx:id="table_titulo" editable="true" prefWidth="250.0" text="Descrição" />
                        <TableColumn fx:id="table_quantidade" editable="true" prefWidth="150.0" text="Quantidade" />
                        <TableColumn fx:id="table_custo" editable="true" prefWidth="175.0" text="Custo" />
                        <TableColumn fx:id="table_preco" editable="true" prefWidth="175.0" text="Preço" />
                    </columns>
                    <VBox.margin>
                        <Insets left="25.0" right="25.0" />
                    </VBox.margin>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </children>
        </VBox>
    </children>
</Pane>
