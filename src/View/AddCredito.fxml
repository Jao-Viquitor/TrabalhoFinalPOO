<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" styleClass="background" stylesheets="@Estilo/DarkTheme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.ClienteController">
    <children>
        <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="300.0">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <children>
                <TilePane alignment="CENTER" prefHeight="53.0" prefWidth="300.0">
                    <children>
                        <Label alignment="CENTER" text="Adicionar Crédito" />
                    </children>
                </TilePane>
                <VBox alignment="TOP_CENTER" prefHeight="242.0" prefWidth="300.0">
                    <children>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <TextField fx:id="buscarRG" onKeyTyped="#buscaRG" prefHeight="37.0" prefWidth="145.0" promptText="RG do Cliente">
                                    <HBox.margin>
                                        <Insets right="10.0" />
                                    </HBox.margin>
                                </TextField>
                                <Button mnemonicParsing="false" onAction="#pesquisarCliente" text="Pesquisar" />
                            </children>
                        </HBox>
                        <TextField fx:id="nomeCliente" editable="false" prefHeight="40.0" prefWidth="270.0" promptText="Nome do Cliente">
                            <VBox.margin>
                                <Insets bottom="15.0" left="25.0" right="25.0" top="15.0" />
                            </VBox.margin>
                        </TextField>
                        <TextField promptText="R$">
                            <VBox.margin>
                                <Insets left="25.0" right="25.0" />
                            </VBox.margin>
                        </TextField>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <RadioButton mnemonicParsing="false" text="Dinheiro" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets right="25.0" top="10.0" />
                                    </HBox.margin>
                                </RadioButton>
                                <RadioButton mnemonicParsing="false" text="Pix" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets top="10.0" />
                                    </HBox.margin>
                                </RadioButton>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <RadioButton mnemonicParsing="false" text="Crédito" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets bottom="25.0" />
                                    </HBox.margin>
                                </RadioButton>
                                <RadioButton mnemonicParsing="false" text="Débito" textFill="WHITE">
                                    <HBox.margin>
                                        <Insets bottom="25.0" left="25.0" />
                                    </HBox.margin>
                                </RadioButton>
                            </children>
                        </HBox>
                    </children>
                </VBox>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="cancelar" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" textFill="RED">
                            <HBox.margin>
                                <Insets right="25.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="confirmar" mnemonicParsing="false" onAction="#confirmar" text="Confirmar" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
